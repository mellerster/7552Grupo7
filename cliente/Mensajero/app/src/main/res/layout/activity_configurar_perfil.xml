<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.appmaker.mensajero.ConfigurarPerfilActivity">

    <ProgressBar
        android:id="@+id/configurar_perfil_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/configurar_perfil_panel"
        >

        <TextView android:text="Usuario:" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblUsuario"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblUsuarioLogueado"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView android:text="Estado:" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblEstado"
            android:layout_row="1"
            android:layout_column="0" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conectado"
            android:id="@+id/swtEstado"
            android:layout_row="1"
            android:layout_column="1"
            android:enabled="true"
            android:hint="Conectado"
            android:backgroundTint="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ãšltimo Checkin:"
            android:layout_row="2"
            android:layout_column="0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/lblUltimoCheckin"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto de Perfil:"
            android:id="@+id/lblFotoPerfil"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgFoto"
            android:maxHeight="300dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_columnSpan="2"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar Foto"
            android:id="@+id/btnCambiarFoto"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="2"/>
    </GridLayout>

</RelativeLayout>
